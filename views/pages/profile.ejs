<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/head'); %>
  
</head>
<body>
    <div class="jumbotron">
  
        <div class="d-flex justify-content-end">
          <div class="d-flex">
            <form class="mr-3"  action="/products" method="get">
              <input type="submit" value="Products" class="btn btn-danger">
            </form>
            <% if (cart) { %>
              <form class="mr-3"  action="/cart" method="get">
                <input type="submit" value="Cart" class="btn btn-success">
              </form>
            <% } else { %>
              <div></div>
            <% } %>
            <form class="mr-3"  action="/profile" method="get">
              <input type="submit" value="Profile" class="btn btn-secondary">
            </form>
            <form class="mr-3"  action="/chat" method="get">
              <input type="submit" value="Chat" class="btn btn-primary">
            </form>
            <form class="mr-3"  action="/messages" method="get">
              <input type="submit" value="Messages" class="btn btn-info">
            </form>
            <form id="logOut" action="/logout" method="post">
              <input type="submit" value="Desloguear" class="btn btn-warning">
            </form>
          </div>
          
          
        </div>

        <h1 class="text-primary pb-4">Datos personales</h1>
        
        <div class="d-flex">
            
            <div class="infoProfileContainer">
                
                <div class="d-flex align-items-center profile" >
                    <h3 class=" fs-5 fw-bold profileTitle">Name</h3>
                    <div class="infoProfile"><%= name %></div>
                </div>
                <div class="d-flex align-items-center profile">
                    <h3 class=" fs-5 fw-bold profileTitle">Email</h3>
                    <div class="infoProfile"><%= usuario %></div>
                </div>
                <div class="d-flex align-items-center profile">
                    <h3 class=" fs-5 fw-bold profileTitle">Address</h3>
                    <div class="infoProfile"><%= address %></div>
                </div>
                <div class="d-flex align-items-center profile">
                    <h3 class=" fs-6 fw-bold profileTitle">Age</h3>
                    <div class="infoProfile"><%= age %></div>
                </div>
                <div class="d-flex align-items-center profile">
                    <h3 class=" fs-5 fw-bold profileTitle">Phone</h3>
                    <div class="infoProfile"><%= phone %></div>
                </div>
            </div>
            <div class="imageProfile">
                <img src="<%= picture %>" alt="profile image">
            </div>
        </div>

        

      </div>
</body>
</html>